<form>
  <div style="display:flex; flex-direction:column">
    {{#each decks}}
      <div style="display:flex">
        <span style="flex:8"> {{this.deckName}} </span>
        <a style="flex:1" title="Draw Cards Settings" id="{{this.deckID}}-draw"><i
            class="icon-hand"
          ></i></a>
        <a style="flex:1" title="View Cards Settings" id="{{this.deckID}}-view"><i
            class="fa fa-eye"
          ></i></a>
        <a
          style="flex:1"
          title="Discard Pile Settings"
          id="{{this.deckID}}-discard"
        ><i class="fa fa-inbox"></i></a>
      </div>
    {{/each}} 
  </div>
  <div class="form-group" style="margin-top: 20px;">
    <button type="submit" name="submit" style="display: none;">
        <i class="fas fa-save"></i> Save
    </button>
  </div> 
</form>